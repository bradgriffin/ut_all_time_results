<h1>Listing games</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Ut score</th>
      <th>Opponent score</th>
      <th>Season</th>
      <th>Opponent</th>
      <th>Location</th>
      <th>Ut rank</th>
      <th>Opponent rank</th>
      <th>Result</th>
      <th>Coach</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.date %></td>
        <td><%= game.ut_score %></td>
        <td><%= game.opponent_score %></td>
        <td><%= game.season.season %></td>
        <td><%= game.opponent.school_name %></td>
        <td><%= game.location.city %></td>
        <td><%= game.ut_ranking.ranking %></td>
        <td><%= game.opponent_ranking.ranking %></td>
        <td><%= game.result.result %></td>
        <td><%= game.coach.name %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

